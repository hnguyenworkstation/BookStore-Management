<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*CSS file from free template website*@
    <link rel="stylesheet" href="~/Content/CSSCustomerLayout/fonts.css">
    <link rel="stylesheet" href="~/Content/CSSCustomerLayout/screen.css">

    @*CSS files designed for Customer Layout*@
    <link href="~/Content/CSSCustomerLayout/Customer.css" rel="stylesheet">

    @*Add CSS files of font awesome*@
    <link href="~/Content/font-awesome-4.5.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.5.0/css/font-awesome.css" rel="stylesheet" />

    @*Add CSS File, JavaScript File of Nivo Slider*@
    <link href="~/Nivo Slider/nivo-slider.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Nivo Slider/jquery.nivo.slider.js"></script>
    <script src="~/Nivo Slider/jquery.nivo.slider.pack.js"></script>

</head>

<body>
    <div id="full-page">

        <section class="blank">
            <div class="flash">
                <div class="cPhone">
                    <i class="fa fa-phone"></i>
                    (1) 978-631-5334
                </div>
                <div class="Register">
                    @*New Div to Register or Login*@
                    <i class="fa fa-unlock"></i>
                    @Html.ActionLink("Register", "Regis", null, htmlAttributes: new { @class = "Regis" })
                    <i class="fa fa-sign-in"></i>
                    @Html.ActionLink("Login", "login", null, htmlAttributes: new { @class = "login" })

                </div>
            </div>

            @*Design Nav Menu On the Right Side*@
            <div class="flash success" id="divList">
                @*Making A Search Box*@
                <div id="SearchBox">
                    @using (Html.BeginForm())
                    {
                        @Html.TextBox("SearchBox","",htmlAttributes: new {@class="TextBoxSearch", @placeholder="Enter text..."});
                        @*IMage Button for Search Box*@
                        <div id="SearchImage">
                            <button type="submit">
                                <img src="~/Content/Images/Silver-Image-Search-PNG-03180.png" />
                            </button>
                        </div>
                    }
                </div>


                <ul class="navMenu">
                    <li><a href="#">MAIN PAGE</a></li>
                    <li><a href="#">ABOUT US</a></li>
                    <li><a href="#">CONTACT</a></li>
                    <li><a href="#">GUIDE</a></li>
                    <li><a href="#">INVENTORY</a></li>
                </ul>
            </div>
        </section>

        <section>
            @*Left Menu for new Books*@
            <div id="LeftMenu">
                <div class="activity">
                    @*Insert Partial View for new Books*@
                    @Html.Action("NewBooksPartial","Book")
                </div>
            </div>

            @*Nivo Slider Div*@
            <div id="slider" class="nivoSlider">
                <img src="~/Content/Images/book-music-violin-key-facebook-cover.jpg" />
                <img src="~/Content/Images/christian_books_cover.jpg" />
                <img src="~/Content/Images/cover_book_quote-553022.jpg" />
                <img src="~/Content/Images/yO1A5Ed5KqZU8D7OPESEubFJ6nTmzlcXUfqlm4etiSE6eNC6cYyb1mFXJrDRtzEh.jpg" />
            </div>
            <div style="clear:both"> </div>
        </section>

        <div id="introduction">
            @RenderBody()
        </div>

        <section>
            @*Topic Buttons*@
            <div>
                @Html.Action("TopicPartial", "Topic")
            </div>

            <hr>

        </section>
        @*Publish Information*@
        <div style="clear:both"></div>
        <section class="blank items">
            @*publisher list on the left side*@
            <div id="LeftPublsiherList">
                <div class="item">
                    <div class="item-info">
                        @*Added Publisher Parital View*@
                        @Html.Action("PublisherPartial", "Publisher")
                    </div>

                    <img src="http://lorempixel.com/400/300/" alt="Image">
                </div>

                <div id="RightInformation">
                        @RenderSection("Information")
                </div>
            </div>

            <div>
                <a href="#" class="button button-buy">Buy button (full width for columns)</a>
            </div>
         </section>
    </div>

    @*Hook up the Nivo Slider*@
    <script type="text/javascript">
        $(window).load(function() {
            $('#slider').nivoSlider({
                controlNav: false,
                prevText: '',
                nextText: '',
            });
        });
    </script>

</body>
</html>
